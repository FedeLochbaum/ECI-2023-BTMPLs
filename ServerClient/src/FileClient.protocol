typestate FileClient {

  Init = {
    boolean start(): <true: Connected, false: Close>
  }

  Connected = {
    void request(String): Requesting
    void close(): end
  }

  Requesting = {
    boolean hasNext(): <true: Receiving, false: Connected>
  }

  Receiving = {
    boolean hasNext(): <true: Receiving, false: Connected>
    void nextByte(): Receiving
  }

  Close {
    void close(): end
  }
}
